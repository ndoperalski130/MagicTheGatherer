<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradiant">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layoutTop"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Card Name: "
            android:textSize="40sp"
            android:id="@+id/tvSearchNameHandle"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/etSearchName"
            app:layout_constraintStart_toEndOf="@id/tvSearchNameHandle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tvSearchNameHandle"
            android:hint="Card Name"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRarityHandle"
            android:text="Rarity"
            android:textSize="40sp"
            app:layout_constraintTop_toBottomOf="@id/tvSearchNameHandle"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinRarity"
            android:entries="@array/rarities"
            app:layout_constraintTop_toTopOf="@id/tvRarityHandle"
            app:layout_constraintBottom_toBottomOf="@id/tvRarityHandle"
            app:layout_constraintStart_toEndOf="@id/tvRarityHandle"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@id/tvRarityHandle"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLookupCardButton"
            android:text="Find cards"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutTop"
        android:id="@+id/spacer"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/rvMagicRecyclerView"
        app:layout_constraintTop_toBottomOf="@id/spacer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/magic_list_item"
        />

</androidx.constraintlayout.widget.ConstraintLayout>