<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="WebViewLayout"
    android:background="@drawable/gradiant">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <WebView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/wvDetailsWebView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:ellipsize="end"
                android:id="@+id/tvDetailsCardName"
                android:layout_below="@id/wvDetailsWebView"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:text="CardName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsManaCost"
                android:text="SampleText"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/tvDetailsCardName"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsRarity"
                android:layout_below="@id/tvDetailsManaCost"
                android:text="Sample Text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFlavorText"
                android:layout_below="@id/tvDetailsText"
                android:text="FlavorText"
                android:textStyle="italic"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvType"
                android:layout_below="@id/tvDetailsRarity"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsText"
                android:textAlignment="center"
                android:layout_below="@id/tvType"
                android:text="SampleText"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDetailsRulings"
                android:text="Rulings: "
                android:ellipsize="end"
                android:layout_below="@id/tvFlavorText"
                android:layout_marginTop="30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btnBack"
                android:layout_below="@id/tvDetailsRulings"
                android:text="Back"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>

    </ScrollView>



</LinearLayout>